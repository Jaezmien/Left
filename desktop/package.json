{
  "name": "Left",
  "productName": "Left",
  "version": "0.2.0",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "clean": "rm -r ../builds",
    "dist": "CSC_IDENTITY_AUTO_DISCOVERY=false electron-builder build --mac --win --linux -p always",
    "postinstall": "npm run postinstall:electron && electron-builder install-app-deps",
    "build:linux": "electron-builder build --linux",
    "build:windows": "electron-builder build --windows",
    "build:mac": "CSC_IDENTITY_AUTO_DISCOVERY=false electron-builder build --mac"
  },
  "build": {
    "extends": null,
    "appId": "com.hundredrabbits.left",
    "asar": true,
    "copyright": "Copyright Â© 2017 Hundredrabbits",
    "directories": {
      "output": "../builds"
    },
    "files": [
      "main.js",
      "lib/**/*",
      "sources/**/*",
      "node_modules/**/*",
      "!*.png",
      "!*.ico",
      "!*.icns",
      "package.json"
    ],
    "mac": {
      "category": "com.hundredrabbits.left",
      "icon": "icon.icns",
      "target": [
        {
          "target": "dmg",
          "arch": [
            "x64",
            "arm64"
          ]
        }
      ]
    },
    "linux": {
      "category": "Editor",
      "target": [
        {
          "target": "deb",
          "arch": [
            "ia32",
            "x64"
          ]
        },
        {
          "target": "rpm",
          "arch": [
            "ia32",
            "x64"
          ]
        },
        {
          "target": "AppImage",
          "arch": [
            "ia32",
            "x64"
          ]
        }
      ]
    },
    "win": {
      "target": [
        "zip",
        "nsis"
      ],
      "icon": "icon.ico"
    },
    "fileAssociations": [
      {
        "name": "Document",
        "description": "Left",
        "role": "Editor",
        "ext": "txt"
      }
    ]
  },
  "devDependencies": {
    "electron": "^17.0.0",
    "electron-builder": "^22.14.13"
  },
  "standard": {
    "globals": [
      "terminal",
      "localStorage",
      "DOMParser",
      "onMessage",
      "postMessage",
      "FileReader",
      "performance",
      "Worker"
    ],
    "ignore": [
      "/node_modules/*"
    ]
  }
}
